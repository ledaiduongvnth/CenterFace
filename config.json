{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "MobileNetSeg",
        "args": {
            "base_name": "mobilenetv2_10",
            "heads": {
                "hm": 1,
                "wh": 2,
                "hm_offset": 2,
                "landmarks": 10
            },
            "head_conv": 64,
            "pretrained": true
        }
    },
    "train_data_loader": {
        "type": "DataLoader",
        "args":{
            "key": "train",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
        "val_data_loader": {
        "type": "DataLoader",
        "args":{
            "key": "val",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "center_face_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
